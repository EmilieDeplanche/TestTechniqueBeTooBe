{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ activity.startDate ? activity.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ activity.endDate ? activity.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>RequiredAge</th>
                <td>{{ activity.requiredAge }}</td>
            </tr>
            <tr>
                <th>MaxPeople</th>
                <td>{{ activity.maxPeople }}</td>
            </tr>
            <tr>
                <th>CurrentPeople</th>
                <td>{{ activity.currentPeople }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('activity_index') }}">back to list</a>

    <a href="{{ path('activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activity/_delete_form.html.twig') }}
{% endblock %}
